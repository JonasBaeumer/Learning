class Solution(object):
    def longestPalindrome(self, s):
        if not s:
            return ""
        n = len(s)
        best_l, best_r = 0, 0

        def expand(l, r):
            while l >= 0 and r < n and s[l] == s[r]:
                l -= 1
                r += 1
            return l + 1, r - 1 

        for i in range(n):
            l1, r1 = expand(i, i)       # odd
            if r1 - l1 > best_r - best_l:
                best_l, best_r = l1, r1
            l2, r2 = expand(i, i + 1)   # even
            if r2 - l2 > best_r - best_l:
                best_l, best_r = l2, r2

        return s[best_l:best_r + 1]
